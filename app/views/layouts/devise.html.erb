<!DOCTYPE html>
<html>
  <head>
    <title>TwitterStimulus</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <% if notice %>
        <p class="notice"><%= notice %></p>
      <% else alert %>
        <p class="alert"><%= alert %></p>
      <% end %>
      <h1 class="text-center mt-5">Twitter</h1>
      <div class="row">
        <div class="col-md-6 offset-md-3 align-self-center">
          <div class="card">
            <div class="card-body">
              <%= yield %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
